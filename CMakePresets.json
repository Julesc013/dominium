{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 15,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base-msys2",
      "displayName": "MSYS2 UCRT64 (Legacy)",
      "description": "Legacy MSYS2 toolchain (not supported under current Windows build policy).",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "C:/msys64/ucrt64/bin/cc.exe",
        "CMAKE_CXX_COMPILER": "C:/msys64/ucrt64/bin/c++.exe",
        "DOM_PLATFORM": "win32",
        "DOM_BACKEND_SDL2": "OFF",
        "DOM_BACKEND_DX9": "OFF",
        "DOM_BACKEND_GL1": "OFF",
        "DOM_BACKEND_GL2": "OFF",
        "DOM_BACKEND_VECTOR2D": "ON",
        "DOM_ENABLE_AUDIO": "ON",
        "DOM_ENABLE_NET": "ON"
      },
      "environment": {
        "PATH": "C:/msys64/ucrt64/bin;C:/Windows/System32;$penv{PATH}"
      },
      "cmakeExecutable": "C:/msys64/ucrt64/bin/cmake.exe"
    },
    {
      "name": "msys2-debug",
      "displayName": "MSYS2 Debug (UCRT64)",
      "inherits": "base-msys2",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "DOM_BUILD_MODE": "Debug"
      }
    },
    {
      "name": "msys2-release",
      "displayName": "MSYS2 Release (UCRT64)",
      "inherits": "base-msys2",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "DOM_BUILD_MODE": "Release"
      }
    },
    {
      "name": "msvc-base",
      "displayName": "MSVC (VS 2026)",
      "description": "Native MSVC toolchain (SDL2 platform; GL2 preferred, DX9 fallback).",
      "generator": "Visual Studio 18 2026",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "architecture": "x64",
      "cacheVariables": {
        "DOM_PLATFORM": "sdl2",
        "DOM_BACKEND_SDL2": "ON",
        "DOM_BACKEND_DX9": "ON",
        "DOM_BACKEND_GL1": "OFF",
        "DOM_BACKEND_GL2": "ON",
        "DOM_BACKEND_VECTOR2D": "ON",
        "DOM_SDL2_ROOT": "${sourceDir}/external/SDL2",
        "DOM_FETCH_SDL2": "ON",
        "DOM_DISALLOW_DOWNLOADS": "OFF",
        "DOM_ENABLE_AUDIO": "ON",
        "DOM_ENABLE_NET": "ON"
      }
    },
    {
      "name": "vs2026-x64-debug",
      "displayName": "VS 2026 x64 Debug",
      "inherits": "msvc-base",
      "binaryDir": "${sourceDir}/out/build/vs2026/${presetName}",
      "cacheVariables": {
        "DOM_BUILD_MODE": "Debug",
        "DOM_BUILD_TOOLS": "ON",
        "DOM_BUILD_SETUP": "ON",
        "DOM_BUILD_LAUNCHER": "ON",
        "DOM_BUILD_GAME": "ON",
        "DOM_BUILD_TESTS": "ON",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>"
      }
    },
    {
      "name": "vs2026-x64-release",
      "displayName": "VS 2026 x64 Release",
      "inherits": "msvc-base",
      "binaryDir": "${sourceDir}/out/build/vs2026/${presetName}",
      "cacheVariables": {
        "DOM_BUILD_MODE": "Release",
        "DOM_BUILD_TOOLS": "ON",
        "DOM_BUILD_SETUP": "ON",
        "DOM_BUILD_LAUNCHER": "ON",
        "DOM_BUILD_GAME": "ON",
        "DOM_BUILD_TESTS": "ON",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>"
      }
    },
    {
      "name": "msvc-win32-dx9",
      "displayName": "MSVC Win32 + DX9 (Fallback)",
      "description": "Win32 platform fallback with DX9 renderer (SDL2 disabled).",
      "inherits": "msvc-base",
      "cacheVariables": {
        "DOM_PLATFORM": "win32",
        "DOM_BACKEND_SDL2": "OFF",
        "DOM_BACKEND_GL2": "OFF",
        "DOM_BACKEND_DX9": "ON"
      }
    },
    {
      "name": "msvc-debug",
      "displayName": "MSVC Debug",
      "inherits": "msvc-base",
      "cacheVariables": {
        "DOM_BUILD_MODE": "Debug",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/bin",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/lib",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/lib",
        "CMAKE_PDB_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/pdb",
        "CMAKE_COMPILE_PDB_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/pdb"
      }
    },
    {
      "name": "msvc-release",
      "displayName": "MSVC Release",
      "inherits": "msvc-base",
      "cacheVariables": {
        "DOM_BUILD_MODE": "Release",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/bin",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/lib",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/lib",
        "CMAKE_PDB_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/pdb",
        "CMAKE_COMPILE_PDB_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/pdb"
      }
    },
    {
      "name": "windows-msvc-x64-debug",
      "displayName": "Windows MSVC x64 Debug",
      "inherits": "msvc-base",
      "architecture": "x64",
      "cacheVariables": {
        "DOM_BUILD_MODE": "Debug",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/bin",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/lib",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/lib",
        "CMAKE_PDB_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/pdb",
        "CMAKE_COMPILE_PDB_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/pdb"
      }
    },
    {
      "name": "windows-msvc-x86-debug",
      "displayName": "Windows MSVC x86 Debug",
      "inherits": "msvc-base",
      "architecture": "Win32",
      "cacheVariables": {
        "DOM_BUILD_MODE": "Debug",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/bin",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/lib",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/lib",
        "CMAKE_PDB_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/pdb",
        "CMAKE_COMPILE_PDB_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/out/pdb"
      }
    },
    {
      "name": "windows-msvc-vs2026",
      "displayName": "Windows VS 2026 (Live UI Preview)",
      "inherits": "msvc-debug"
    },
    {
      "name": "macos-xcode-debug",
      "displayName": "macOS Xcode Debug",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "DOM_BUILD_MODE": "Debug",
        "DOM_PLATFORM": "cocoa",
        "DOM_BACKEND_SDL2": "OFF",
        "DOM_BACKEND_GL2": "OFF",
        "DOM_BACKEND_DX9": "OFF"
      }
    },
    {
      "name": "macos-xcode",
      "displayName": "macOS Xcode (Live UI Preview)",
      "inherits": "macos-xcode-debug"
    },
    {
      "name": "linux-debug",
      "displayName": "Linux GCC Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "DOM_BUILD_MODE": "Debug",
        "DOM_PLATFORM": "posix_x11",
        "DOM_BACKEND_SDL2": "OFF",
        "DOM_BACKEND_GL2": "OFF",
        "DOM_BACKEND_DX9": "OFF"
      }
    },
    {
      "name": "linux-dev",
      "displayName": "Linux Dev (Live UI Preview)",
      "inherits": "linux-debug"
    },
    {
      "name": "debug",
      "displayName": "Debug (MSVC)",
      "inherits": "msvc-debug"
    },
    {
      "name": "deterministic",
      "displayName": "DeterministicRelease (MSVC)",
      "inherits": "msvc-base",
      "cacheVariables": {
        "DOM_BUILD_MODE": "DeterministicRelease"
      }
    },
    {
      "name": "baseline-debug",
      "displayName": "Baseline Debug (C89/C++98)",
      "description": "Canonical baseline toolchain/settings; no optional accel layers.",
      "inherits": "msvc-debug",
      "cacheVariables": {
        "CMAKE_C_STANDARD": "90",
        "CMAKE_C_STANDARD_REQUIRED": "ON",
        "CMAKE_C_EXTENSIONS": "OFF",
        "CMAKE_CXX_STANDARD": "98",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "DOM_ENABLE_MODERN": "OFF",
        "DOM_PLATFORM": "sdl2",
        "DOM_BACKEND_SOFT": "ON",
        "DOM_BACKEND_NULL": "OFF",
        "DOM_BACKEND_SDL2": "ON",
        "DOM_BACKEND_DX9": "OFF",
        "DOM_BACKEND_GL1": "OFF",
        "DOM_BACKEND_GL2": "OFF",
        "DOM_BACKEND_VECTOR2D": "OFF",
        "DOM_FETCH_SDL2": "OFF",
        "DOM_DISALLOW_DOWNLOADS": "ON",
        "FETCHCONTENT_FULLY_DISCONNECTED": "ON",
        "FETCHCONTENT_UPDATES_DISCONNECTED": "ON"
      }
    },
    {
      "name": "baseline-release",
      "displayName": "Baseline Release (C89/C++98)",
      "description": "Canonical baseline release toolchain/settings; no optional accel layers.",
      "inherits": "baseline-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "DOM_BUILD_MODE": "Release"
      }
    },
    {
      "name": "modern-debug",
      "displayName": "Modern Debug (C89/C++98 + optional accel)",
      "description": "Enables optional acceleration layers while retaining baseline correctness paths.",
      "inherits": "baseline-debug",
      "cacheVariables": {
        "DOM_ENABLE_MODERN": "ON",
        "DOM_BACKEND_GL2": "ON",
        "DOM_BACKEND_DX9": "ON"
      }
    },
    {
      "name": "modern-release",
      "displayName": "Modern Release (C89/C++98 + optional accel)",
      "description": "Enables optional acceleration layers while retaining baseline correctness paths.",
      "inherits": "baseline-release",
      "cacheVariables": {
        "DOM_ENABLE_MODERN": "ON",
        "DOM_BACKEND_DX9": "ON"
      }
    }
  ],
