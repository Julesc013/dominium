{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Astronomy Catalog Entry Schema",
  "version": "1.0.0",
  "description": "Canonical astronomy object record for deterministic navigation indexing.",
  "x-doc-ref": [
    "docs/architecture/astronomy_catalogs.md",
    "docs/canon/glossary_v1.md Astronomy"
  ],
  "type": "object",
  "required": [
    "schema_version",
    "object_id",
    "kind",
    "parent_id",
    "frame_id",
    "physical_params",
    "bounds",
    "search_keys",
    "pack_id"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0"
    },
    "object_id": {
      "type": "string",
      "minLength": 1
    },
    "kind": {
      "type": "string",
      "enum": [
        "galaxy",
        "arm",
        "cluster",
        "system",
        "star",
        "planet",
        "moon",
        "barycenter",
        "poi"
      ]
    },
    "parent_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "frame_id": {
      "type": "string",
      "minLength": 1
    },
    "physical_params": {
      "type": "object"
    },
    "orbit_params": {
      "type": "object"
    },
    "bounds": {
      "type": "object",
      "required": [
        "kind",
        "sphere_radius_mm"
      ],
      "additionalProperties": false,
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "sphere"
          ]
        },
        "sphere_radius_mm": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "search_keys": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "pack_id": {
      "type": "string",
      "minLength": 1
    }
  },
  "examples": [
    {
      "schema_version": "1.0.0",
      "object_id": "object.earth",
      "kind": "planet",
      "parent_id": "object.sol_system",
      "frame_id": "frame.earth.inertial",
      "physical_params": {
        "mean_radius_km": 6371,
        "gm_m3s2": 398600441800000.0
      },
      "orbit_params": {
        "semi_major_axis_km": 149598023
      },
      "bounds": {
        "kind": "sphere",
        "sphere_radius_mm": 6371000000
      },
      "search_keys": [
        "earth",
        "terra"
      ],
      "pack_id": "planet.earth"
    }
  ]
}
