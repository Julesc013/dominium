{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Universe Identity Schema",
  "version": "1.0.0",
  "description": "Canonical immutable universe identity contract for Dominium session bootstrap.",
  "x-doc-ref": [
    "docs/canon/constitution_v1.md ยง3 A1/A6",
    "docs/canon/glossary_v1.md UniverseIdentity",
    "docs/roadmap/milestone_lab_galaxy.md"
  ],
  "type": "object",
  "required": [
    "schema_version",
    "global_seed",
    "physical_constants",
    "base_domain_bindings",
    "initial_scenario_id",
    "compatibility_version",
    "identity_hash"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0",
      "description": "Payload schema version for CompatX routing."
    },
    "global_seed": {
      "type": [
        "string",
        "integer"
      ],
      "description": "Deterministic seed root; explicit string or integer only."
    },
    "physical_constants": {
      "type": "object",
      "required": [
        "gravitational_constant",
        "speed_of_light_mps"
      ],
      "additionalProperties": false,
      "properties": {
        "gravitational_constant": {
          "type": "number"
        },
        "speed_of_light_mps": {
          "type": "number"
        }
      }
    },
    "base_domain_bindings": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "initial_scenario_id": {
      "type": "string"
    },
    "compatibility_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "identity_hash": {
      "type": "string",
      "pattern": "^[A-Fa-f0-9]{64}$"
    }
  },
  "examples": [
    {
      "schema_version": "1.0.0",
      "global_seed": "dominium.lab.galaxy.seed.0001",
      "physical_constants": {
        "gravitational_constant": 6.6743e-11,
        "speed_of_light_mps": 299792458
      },
      "base_domain_bindings": [
        "domain.navigation",
        "domain.astronomy"
      ],
      "initial_scenario_id": "scenario.lab.galaxy_nav",
      "compatibility_version": "1.0.0",
      "identity_hash": "5ce1f4975ab8e443664f94f79e4a00c3d54f14ab1ec691e4d8f9f646d159c111"
    }
  ]
}

