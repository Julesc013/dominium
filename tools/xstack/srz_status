#!/usr/bin/env python3
"""Cross-platform launcher for tools/xstack/srz_status.py."""

from __future__ import annotations

import os
import sys


THIS_FILE = os.path.abspath(__file__)
REPO_ROOT = os.path.normpath(os.path.join(os.path.dirname(THIS_FILE), "..", ".."))
if REPO_ROOT not in sys.path:
    sys.path.insert(0, REPO_ROOT)

from tools.xstack.srz_status import main  # noqa: E402


if __name__ == "__main__":
    raise SystemExit(main())
